{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="text-center mb-5">
                    <img src="{{asset('img/logo.png')}}" alt="logo" style="width: 15vw;" >
                    </div>
    <h1 class="text-center mb-5">Création de compte</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    <div class="row d-flex justify-content-center ">
        <div class="col-6">
            {{ form_row(registrationForm.username, {'attr':{'class':'form-control mb-3', 'placeholder':'Nom d\'utilisateur'}, label:'Nom d\'utilisateur',})  }}
        {# </div>
        <div class="col-6"> #}
            {{ form_row(registrationForm.email, {'attr':{'class':'form-control mb-3', 'placeholder':'Entrez votre e-mail'}}) }}
        {# </div>

        <div class="col-6"> #}
            {{ form_row(registrationForm.plainPassword.first, {'attr':{'class':'form-control mb-3',  'placeholder':'Entrez votre mot de passe'}}) }}
        {# </div>
        <div class="col-6"> #}
            {{ form_row(registrationForm.plainPassword.second, {'attr':{'class':'form-control mb-3', 'placeholder':'Confirmez votre mot de passe'}}) }}
        </div>
    <div class="text-center mb-5">
				<button class="col-3 btn align-self-center btn-primary mt-5 text-center" type="submit">
					Je crée mon compte
				</button>
                </div>

    </div>

    {{ form_end(registrationForm) }}
{% endblock %}
