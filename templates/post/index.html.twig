{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container-fluid">
    <h1 class="text-center">Articles</h1>
    <a href="{{ path('app_post_new') }}"><button type="button" class="btn btn-success">Nouvel article</button></a>

    <table class="table">
        <thead>
            <tr>
                {# <th class="text-center">Id</th> #}
                <th class="text-center">Description</th>
                <th class="text-center">Lien vers la page web (https://...)</th>
                <th class="text-center">Nom de l'image (avec extension)</th>
                <th class="text-center">Posté par</th>
                <th class="text-center">Posté le</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                {# <td>{{ post.id }}</td> #}
                <td>{{ post.description }}</td>
                <td>{{ post.link }}</td>
                <td>{{ post.picture }}</td>
                <td>{{ post.postBy.username }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('d/m/Y H:i') : '' }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}"><button type="button" class="btn btn-outline-success">Voir</button></a>
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}"><button type="button" class="btn btn-outline-primary">Modifier</button></a>
                    {# <a type='button' href="">Modifier</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun article trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div> 
{% endblock %}
