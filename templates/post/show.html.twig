{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Lien vers la page</th>
                <td>{{ post.link }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ post.picture }}</td>
            </tr>
            <tr>
                <th>Posté le</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">Retour à la liste</a></br>

    <a href="{{ path('app_post_edit', {'id': post.id}) }}">Modifier</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
